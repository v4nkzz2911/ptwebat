<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/manager_user.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="page">
        <div class="header">
            <div class="left">
                Đây là LOGO
            </div>
            
            <div class ="navbar">
                <ul>
                <% user.MenuBarItem.forEach( item => { %>
                    <li>
                        <a href="<%= item.link %>"> <%= item.label%> </a>
                    </li>    

                <% }) %>
                </ul>
            </div>
            
            <div class="right">
                <h1>
                    Hello <%= user.name %> <br>
                    <%= user.roleName %>
                </h1>
                <div class="link">
                    <a style="text-decoration: none" href="/password/changepass">Đổi mật khẩu</a>
                    <a style="text-decoration: none" href="/logout">Đăng xuất</a>
                </div>

            </div>
            
            
    
        </div>
        <div class="center">
            
            
            
            <table class="table table-bordered">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Email</th>
                    <th scope="col">Điện thoại</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Quyền</th>
                    <th scope="col" class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>
              
                  
                  
                    <% users.forEach( item => { %>
                    <tr>
                            <th scope="row"><%= item.id %></th>
                            <td><%= item.username %></td>
                            <td><%= item.name %></td>
                            <td><%= item.email %></td>
                            <td><%= item.phone %></td>
                            <td><%= item.address %></td>
                            <% if (typeof item.per != "undefined" && item.per) { %>
                                
                                <td> <% if (item.per =="100") { %>
                                    Thêm
                                <% } %> 
                                <% if (item.per =="110") { %>
                                    Thêm,Sửa
                                <% } %> 
                                <% if (item.per =="111") { %>
                                    Thêm, Sửa, Xoá
                                <% } %> 
                            </td>
                            <% } %>
                            <td class="text-end">
                                <a href="/viewuser/<%= item.email %>" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                                <a href="/edituser/<%= item.email %>" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
                      <a href="/delete/<%= item.email %>" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
                        </td>
                           
                    </tr>
                    <% }) %>
                    
                    
                  
                  
              
                </tbody>
              </table>

        </div>
        <div class="footer">

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
</body>
</html>